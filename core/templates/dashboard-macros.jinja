

{% macro coming_soon_section(title, deadline, id="") %}
<section id="{{ id }}" class="coming-soon section">
    {{ section_title(title, subtitle = title + " <strong>(En construction)</strong>")}}    
    <div class="container coming-soon-content">
        <div class="row gy-1">
            <div class="col-12">
                Cette section est en cours de maintenance ou de developpement. 
                Elle sera disponible dans:
            </div>
            <div class="col-12 countdown" data-count="{{ deadline }}">
                <i class="me-2 bi bi-clock"></i>
                <span><em class="count-days">0</em> jours,</span> 
                <span><em class="count-hours">0</em> heures,</span>
                <span><em class="count-minutes">0</em> minutes et</span>
                <span><em class="count-seconds">0</em> secondes.</span>
            </div>
        </div>
    </div>
  </section>
{% endmacro %}

